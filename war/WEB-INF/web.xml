<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  
  <!-- Servlets -->
  <servlet>
    <servlet-name>loginService</servlet-name>
    <servlet-class>com.uwe.canoe.server.login.LoginServiceImpl</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>contentService</servlet-name>
    <servlet-class>com.uwe.canoe.server.contentservice.ContentServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>loginService</servlet-name>
    <url-pattern>/uwecanoe/login</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>contentService</servlet-name>
    <url-pattern>/uwecanoe/content</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>UWECanoe.html</welcome-file>
  </welcome-file-list>

</web-app>
